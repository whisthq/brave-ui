{
  labels: ["dependencies"],

  // We want at most 10 PRs per hour, at most 2 at a time
  prHourlyLimit: 10,
  prConcurrentLimit: 2,

  // We target various path prefixes to group those PRs together
  packageRules: [
    {
      matchPaths: ["definitions/"],
      groupName: "definitions",
    },
    {
      matchPaths: ["examples/webpack-4/"],
      groupName: "examples/webpack-4",
    },
    {
      matchPaths: ["integration-tests/"],
      groupName: "integration-tests",
    },
    {
      matchPaths: ["package/"],
      groupName: "package",
    },
    {
      matchPaths: ["src/"],
      groupName: "src",
    },
    {
      matchPaths: ["stories/"],
      groupName: "stories",
    },
    {
      matchPaths: ["tools/"],
      groupName: "tools",
    },
  ],
}
